<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_bundle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"
    tools:layout_height="70dp"
    tools:layout_width="70dp">

    <com.frame.component.view.SquareFramelayout
        android:layout_width="match_parent"
        android:id="@+id/square_framelayout"
        android:layout_height="match_parent"
        android:padding="0dp">

        <ImageView
            android:id="@+id/img_bundle_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/shape_rect_light_coner"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_bundle_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="-1dp"
            android:layout_marginTop="-1dp"
            android:padding="7dp"
            android:src="@drawable/common_ic_lable_del" />

    </com.frame.component.view.SquareFramelayout>

</android.support.v7.widget.CardView>