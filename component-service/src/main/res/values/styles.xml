<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TopicListTagStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@drawable/common_shape_rect_text_dark_conerfull</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">10sp</item>
        <item name="android:visibility">invisible</item>
    </style>
    <!-- 创建游戏输入框 -->
    <style name="mt_StyleEditorCreateGame">
        <item name="android:background">@drawable/mt_bg_create_game_editor</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">#F84E4F</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
    </style>

    <!-- 创建游戏文字 -->
    <style name="mt_StyleTextCreateGame">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/common_text_blank</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>