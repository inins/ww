<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 标签选择页面Tab文字样式 -->
    <style name="login_TagSelectionTabText" parent="@android:style/TextAppearance.Holo.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 手机号码输入框规则 -->
    <style name="login_phoneInputStyle">
        <item name="android:inputType">phone</item>
        <item name="android:digits">0123456789</item>
        <item name="android:maxLength">11</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/common_text_blank</item>
    </style>

    <!-- 验证码输入框规则 -->
    <style name="login_verifyCodeInputStyle">
        <item name="android:inputType">number</item>
        <item name="android:digits">0123456789</item>
        <item name="android:maxLength">4</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/common_text_blank</item>
    </style>

    <!-- 密码输入框规则 -->
    <style name="login_passwordInputStyle">
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLength">18</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/common_text_blank</item>
    </style>

    <!-- Loading的样式 -->
    <style name="login_LoadingDialogStyle" parent="@android:style/Theme.Dialog">
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsTranslucent">true</item>
    </style>


</resources>
