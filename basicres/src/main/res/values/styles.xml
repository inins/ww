<resources>

    <!-- Base application theme. -->
    <style name="common_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/common_colorPrimary</item>
        <item name="colorPrimaryDark">@color/common_colorPrimaryDark</item>
        <item name="colorAccent">@color/common_colorAccent</item>
        <item name="actionBarSize">@dimen/common_toolbar_height</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/common_appfont</item>
        <item name="android:listDivider">@color/common_list_divider</item>
    </style>

    <!--全屏-->
    <style name="common_AppTheme.NoTitleFullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="common_AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="common_AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--<style name="common_ltxfont" parent="@android:style/TextAppearance.Small">-->
        <!--<item name="android:fontFamily">@font/common_appfont</item>-->
    <!--</style>-->

    <!--底部弹窗出场入场动画-->
    <style name="common_AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/common_dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/common_dialog_bottom_out</item>
    </style>

    <!--通用弹出样式-->
    <style name="common_MyDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--底部弹出样式-->
    <style name="common_PopupDialog" parent="@style/common_MyDialog">
        <item name="android:windowAnimationStyle">@style/common_AnimBottom</item>
    </style>

    <!--loading弹出样式-->
    <style name="common_LoadingDialog" parent="@style/common_MyDialog">
        <!-- 弹出窗底部背景变灰渐入 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 渐入渐出动画 -->
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="common_loadingProgressBar" parent="Base.Widget.AppCompat.ProgressBar"></style>

    <style name="common_EditNone">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/common_text_blank</item>
        <item name="android:textColorHint">@color/common_text_hint</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--水平分割线-->
    <style name="common_Line_H">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/common_line</item>
    </style>

    <!--垂直分割线-->
    <style name="common_Line_V">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/common_line</item>
    </style>

    <!--水平间距-->
    <style name="common_Space_H">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--垂直间距-->
    <style name="common_Space_V">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
