<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/pay_flag_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/topic_list_item_pay_icon"/>

        <TextView
            android:id="@+id/create_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04-08"
            android:textColor="#ff818181"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这一刻，请允许我丧一些吧"
            android:textColor="#ff313131"
            android:textSize="15sp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/image_view"
            android:layout_marginEnd="15dp"
            />

        <TextView
            android:id="@+id/content_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考研这五个多月的时间，多么多么的漫长 和难捱，只有经历过的人才最清楚。清..."
            android:textColor="#ff434343"
            android:textSize="13sp"
            android:minLines="2"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_below="@+id/title_text_view"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/image_view"
            android:layout_marginEnd="15dp"
            />

        <LinearLayout
            android:id="@+id/user_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_text_view"
            android:layout_marginTop="13dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/image_view"
            android:layout_marginEnd="15dp">


            <ImageView
                android:id="@+id/avatar_image_view"
                android:layout_width="19dp"
                android:layout_height="19dp"/>

            <TextView
                android:id="@+id/user_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="白无常白总的事迹"
                android:textColor="#ff434343"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="67dp"
            android:layout_height="86dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/title_text_view"
            android:layout_alignBottom="@+id/user_info_layout"
            android:scaleType="fitXY"
            android:background="@color/common_blue_deep"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical|end">

        <CheckBox
            android:id="@+id/praise_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:checked="false"
            android:button="@drawable/topic_praise_selector"/>

        <TextView
            android:id="@+id/praise_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="110"
            android:textColor="#ff818181"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"
            />

        <ImageView
            android:id="@+id/comment_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/topic_pinglun_ico"
            android:layout_marginLeft="25dp"
            />

        <TextView
            android:id="@+id/comment_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="#ff818181"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"
            />

        <ImageView
            android:id="@+id/share_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/topic_zhuanfa_ico"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/share_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="#ff818181"
            android:textSize="12sp"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="6dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffe5e5e5"
        />

</LinearLayout>