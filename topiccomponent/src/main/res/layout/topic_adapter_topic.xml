<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/topic_list_item_pay_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04-08"
            android:textColor="#ff818181"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这一刻，请允许我丧一些吧"
            android:textColor="#ff313131"
            android:textSize="15sp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/image_view"
            android:layout_marginEnd="15dp"
            />

        <TextView
            android:id="@+id/content_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考研这五个多月的时间，多么多么的漫长 和难捱，只有经历过的人才最清楚。清..."
            android:textColor="#ff434343"
            android:textSize="13sp"
            android:minLines="2"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_below="@+id/title_text_view"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/image_view"
            android:layout_marginEnd="15dp"
            />

        <LinearLayout
            android:id="@+id/user_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_text_view"
            android:layout_marginTop="13dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/image_view"
            android:layout_marginEnd="15dp">


            <ImageView
                android:id="@+id/avatar_image_view"
                android:layout_width="19dp"
                android:layout_height="19dp"/>

            <TextView
                android:layout_width="97dp"
                android:layout_height="12dp"
                android:text="白无常白总的事迹"
                android:textColor="#ff434343"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/title_text_view"
            android:layout_alignBottom="@+id/user_info_layout"
            android:scaleType="fitXY"
            android:background="@color/common_blue_deep"/>


    </RelativeLayout>

</LinearLayout>