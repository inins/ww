<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/topic_shape_rect_top_corner_solid_white">

    <ImageView
        android:id="@+id/topic_imageview"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/holo_blue_bright" />

    <TextView
        android:id="@+id/topic_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="@+id/topic_imageview"
        tools:layout_editor_absoluteX="89dp" />

    <TextView
        android:id="@+id/topic_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/topic_imageview"
        app:layout_constraintStart_toStartOf="@+id/topic_textview"
        app:layout_constraintTop_toBottomOf="@+id/topic_textview"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>