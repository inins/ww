<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/topic_imageview2"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/topic_textview4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topic_textview3"
        app:srcCompat="@color/com_ycuwq_datepicker_selectedTextColor" />


    <TextView
        android:id="@+id/topic_textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="婕欧巴的锅"
        android:textColor="#ff434343"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/topic_imageview2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/topic_textview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="05-11 10:30"
        android:textColor="@color/common_text_dark"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/topic_textview3"
        app:layout_constraintTop_toBottomOf="@+id/topic_textview3" />

    <ImageView
        android:id="@+id/topic_imageview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/topic_textview4"
        app:layout_constraintEnd_toStartOf="@+id/topic_textview5"
        app:layout_constraintTop_toTopOf="@+id/topic_textview3"
        app:srcCompat="@drawable/common_ic_zan" />

    <TextView
        android:id="@+id/topic_textview5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="32"
        android:textColor="#ff818181"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/topic_textview4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topic_textview3" />

    <TextView
        android:id="@+id/topic_textview6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="你好看，你最美！宇宙无敌就是你！!"
        android:textColor="#ff434343"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/topic_textview4"
        app:layout_constraintTop_toBottomOf="@+id/topic_textview4" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_marginTop="10dp"
        android:background="#2A189AFF"
        android:paddingBottom="8dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/topic_textview6"
        app:layout_constraintTop_toBottomOf="@+id/topic_textview6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卡西莫多"
            android:textColor="@color/common_blue_deep"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等人"
            android:textColor="#ff434343"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/topic_total_reply_count_format"
            android:textColor="@color/common_blue_deep"
            android:textSize="12sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>