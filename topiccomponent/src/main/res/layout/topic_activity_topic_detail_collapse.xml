<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/background_image_view"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:scaleType="centerCrop"
        tools:src="@color/common_blue"/>


    <!--<FrameLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="8dp"-->
        <!--android:layout_gravity="bottom"-->
        <!--android:background="@drawable/topic_shape_rect_top_corner_solid_white"-->
        <!--app:layout_collapseMode="parallax">-->

    <!--</FrameLayout>-->

    <LinearLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.wang.social.topic.mvp.ui.widget.GradualColorTextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="23dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="75dp"
            android:textColor="@color/common_text_blank"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="纪录片意外走红B站：冷门纪录片要“征服”资本？纪录片意外走红B站：冷门纪录片要“征服”资本？" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="23dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.wang.social.topic.mvp.ui.widget.GradualColorTextView
                android:id="@+id/tag_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:textColor="@color/common_text_blank"
                android:textSize="12sp"
                tools:text="by #哔哩哔哩 #纪录片"/>

            <com.wang.social.topic.mvp.ui.widget.GradualColorTextView
                android:id="@+id/create_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_text_blank"
                android:textSize="12sp"
                tools:text="2018年04月03日"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>