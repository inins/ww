<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/login0"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:text="App Login1"
        app:layout_constraintBottom_toTopOf="@+id/login1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/login1"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:text="App Login2"
        app:layout_constraintBottom_toTopOf="@+id/login2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login0" />

    <Button
        android:id="@+id/login2"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Im Login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/search"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login1" />

    <Button
        android:id="@+id/search"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Search"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/personal"
        app:layout_constraintTop_toBottomOf="@+id/login2" />


    <LinearLayout
        android:id="@+id/personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/search_button"
        app:layout_constraintTop_toBottomOf="@+id/search">

        <EditText
            android:id="@+id/user_id_edit_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <Button
            android:id="@+id/personal_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="个人名片" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/group_invite_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personal">

        <EditText
            android:id="@+id/group_id_edit_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="群id"/>

        <EditText
            android:id="@+id/msg_id_edit_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="消息id"/>

        <Button
            android:id="@+id/group_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="群邀请详情" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
