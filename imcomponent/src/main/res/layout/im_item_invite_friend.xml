<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="?selectableItemBackground"
    android:clickable="true">

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/iif_cb_check"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginStart="@dimen/common_border_margin"
        android:button="@drawable/common_selector_check"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toRightOf="@id/iif_cb_check"
        app:layout_constraintRight_toRightOf="parent">

        <include layout="@layout/im_view_user" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>