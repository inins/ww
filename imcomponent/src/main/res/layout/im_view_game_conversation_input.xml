<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingLeft="@dimen/im_chat_input_horizontal_space"
    android:paddingRight="@dimen/im_chat_input_horizontal_space"
    android:paddingTop="6dp">

    <ImageView
        android:id="@+id/gvi_iv_toggle_emotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/im_ic_emoji_gray" />

    <android.support.v4.widget.Space
        android:layout_width="@dimen/im_chat_input_horizontal_space"
        android:layout_height="1dp" />

    <com.wang.social.im.view.emotion.widget.EmoticonsEditText
        android:id="@+id/gvi_et_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/im_bg_chat_edittext"
        android:cursorVisible="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:hint="@string/im_chat_input_hint"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="2dp"
        android:maxLines="3"
        android:minHeight="36dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/im_message_txt_receive"
        android:textColorHint="@color/im_message_hint"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/gvi_iv_send"
        android:layout_width="53dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/im_chat_input_horizontal_space"
        android:background="@drawable/im_bg_gcv_send"
        android:gravity="center"
        android:text="发送"
        android:textColor="@color/common_white"
        android:textSize="14dp"
        android:visibility="gone" />
</LinearLayout>