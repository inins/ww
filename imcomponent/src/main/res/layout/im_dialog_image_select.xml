<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/common_border_margin"
    android:paddingStart="@dimen/common_border_margin">

    <TextView
        android:id="@+id/dis_tv_gallery"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/common_bg_white_top_corners"
        android:gravity="center"
        android:text="@string/im_gallery"
        android:textColor="@color/common_text_blank"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/dis_v_gallery"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/common_list_divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dis_tv_gallery" />

    <TextView
        android:id="@+id/dis_tv_shoot"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/common_bg_white"
        android:gravity="center"
        android:text="@string/im_shoot"
        android:textColor="@color/common_text_blank"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dis_v_gallery" />

    <View
        android:id="@+id/dis_v_shoot"
        style="@style/im_line_horizontal"
        android:background="@color/common_list_divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dis_tv_shoot" />

    <TextView
        android:id="@+id/dis_tv_album"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/common_bg_white_bottom_corners"
        android:gravity="center"
        android:text="@string/im_album"
        android:textColor="@color/common_text_blank"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dis_v_shoot" />

    <TextView
        android:id="@+id/dis_tv_cancel"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/common_bg_white_corners"
        android:gravity="center"
        android:text="@string/common_cancel"
        android:textColor="@color/common_text_blank"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dis_tv_album" />
</android.support.constraint.ConstraintLayout>