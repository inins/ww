<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.liaoinstan.springview.widget.SpringView
            android:id="@+id/fc_message_loader"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fc_message_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.liaoinstan.springview.widget.SpringView>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="8dp">

            <ImageView
                android:id="@+id/fc_fun_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/im_icon_fun_point"
                android:visibility="gone" />

            <View
                android:id="@+id/fc_fun_high"
                android:layout_width="38.5dp"
                android:layout_height="38.5dp"
                android:layout_gravity="center_horizontal" />
        </FrameLayout>
    </FrameLayout>

    <com.wang.social.im.view.IMInputView
        android:id="@+id/fc_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@drawable/im_bg_message_input" />
</LinearLayout>