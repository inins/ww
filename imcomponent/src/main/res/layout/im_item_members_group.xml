<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <View
        android:id="@+id/mg_top_divider"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@color/common_list_divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mg_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_border_margin"
        android:textColor="@color/common_text_blank"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mg_top_divider"
        tools:text="00后" />

    <TextView
        android:id="@+id/mg_tv_member_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/common_text_blank"
        android:textSize="9dp"
        app:layout_constraintBottom_toBottomOf="@id/mg_tv_title"
        app:layout_constraintLeft_toRightOf="@id/mg_tv_title"
        tools:text="(10人)" />

    <ImageView
        android:id="@+id/mg_iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginEnd="@dimen/common_border_margin"
        android:src="@drawable/common_ic_next_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mg_top_divider" />

    <View
        android:id="@+id/mg_bottom_divider"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:background="@color/common_list_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>