<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/pfp_cl_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/im_bg_popup_fun_point"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/pfp_iv_cover"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/im_round_image_placeholder" />

        <TextView
            android:id="@+id/pfp_tv_summary"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="特长生加分政策寿终正寝！割掉了“一考定终身”时代的尾巴"
            android:textColor="@color/common_white"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="@id/pfp_iv_cover"
            app:layout_constraintLeft_toRightOf="@id/pfp_iv_cover"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/pfp_iv_cover" />

        <TextView
            android:id="@+id/pfp_tvb_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="查看更多>>"
            android:textColor="@color/common_white"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pfp_iv_cover" />
    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/common_blue_light"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pfp_cl_content" />
</android.support.constraint.ConstraintLayout>