<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="?selectableItemBackground"
    android:clickable="true">

    <ImageView
        android:id="@+id/ir_iv_avatar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="@dimen/common_border_margin"
        android:src="@drawable/common_default_circle_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ir_iv_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/im_ic_cv_social"
        app:layout_constraintLeft_toLeftOf="@id/ir_iv_avatar"
        app:layout_constraintTop_toTopOf="@id/ir_iv_avatar" />

    <TextView
        android:id="@+id/ir_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="@color/common_text_blank"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ir_iv_avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="阿刁" />
</android.support.constraint.ConstraintLayout>