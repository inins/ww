<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="78dp">

    <TextView
        android:id="@+id/isl_tv_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_border_margin"
        android:textColor="@color/common_text_blank"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <ImageView
        android:id="@+id/isl_iv_portrait"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/isl_tv_rank"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/common_default_circle_placeholder" />

    <TextView
        android:id="@+id/isl_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common_border_margin"
        android:layout_marginStart="15dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/common_text_blank"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/isl_tv_referrals"
        app:layout_constraintLeft_toRightOf="@id/isl_iv_portrait"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="肯德基" />

    <TextView
        android:id="@+id/isl_tv_referrals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/common_colorAccent"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/isl_tv_nickname"
        app:layout_constraintTop_toBottomOf="@id/isl_tv_nickname"
        tools:text="11位下线" />
</android.support.constraint.ConstraintLayout>