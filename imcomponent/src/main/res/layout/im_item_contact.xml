<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/ic_tv_portrait"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/common_border_margin"
        android:background="@drawable/im_bg_contact_portrait"
        android:gravity="center"
        android:textColor="@color/common_white"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="酱" />

    <TextView
        android:id="@+id/ic_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxWidth="165dp"
        android:textColor="@color/common_text_blank"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@id/ic_tv_phone_number"
        app:layout_constraintLeft_toRightOf="@id/ic_tv_portrait"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="艾伦" />

    <TextView
        android:id="@+id/ic_tv_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxWidth="165dp"
        android:textColor="@color/common_text_dark"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/ic_tv_name"
        app:layout_constraintTop_toBottomOf="@id/ic_tv_name"
        tools:text="15823568561" />

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_border_margin"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ic_tvb_handle"
            android:layout_width="58dp"
            android:layout_height="24dp"
            android:background="@drawable/common_bg_btn_theme"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:textSize="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="添加" />

        <TextView
            android:id="@+id/ic_tv_unjoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/im_unjoied"
            android:textColor="@color/common_blue_gray"
            android:textSize="11dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ic_tv_added"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/im_added"
            android:textColor="@color/common_colorAccent"
            android:textSize="12dp"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/common_border_margin"
        android:background="?attr/dividerHorizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>