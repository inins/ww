<?xml version="1.0" encoding="utf-8"?>
<com.wang.social.pictureselector.ui.widget.ThumbnailLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ps_CircularAutoSizeTextView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/thumbnail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <com.frame.component.view.CircularAutoSizeTextView
        android:id="@+id/flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        android:text="9"
        ps_CircularAutoSizeTextView:ps_BackgroundColor="@color/common_blue_deep"
        ps_CircularAutoSizeTextView:ps_TextColor="@color/common_white"
        ps_CircularAutoSizeTextView:ps_TextSize="34sp"
        ps_CircularAutoSizeTextView:ps_BorderWidth="0dp"/>

</com.wang.social.pictureselector.ui.widget.ThumbnailLayout>