<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- outer circle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/common_blue_deep" />
            <corners android:radius="12dp" />
            <gradient
                android:angle="45"
                android:centerColor="@color/common_blue_deep"
                android:centerY="0.4"
                android:endColor="@color/common_blue_light"
                android:startColor="@color/common_blue_deep" />
            <size
                android:width="300dp"
                android:height="410dp" />
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#2D2D2D" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>