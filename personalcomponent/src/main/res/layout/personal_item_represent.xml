<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="65dp"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/img_header"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/default_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="埃米尔"
        android:textColor="@color/common_text_blank"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_header"
        app:layout_constraintStart_toEndOf="@+id/img_header"
        app:layout_constraintTop_toTopOf="@+id/img_header" />

    <TextView
        android:id="@+id/text_diamond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:drawablePadding="3dp"
        android:drawableRight="@drawable/common_ic_diamond_small"
        android:gravity="center"
        android:text="9"
        android:textColor="@color/common_text_blank"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/text_diamond_title"
        app:layout_constraintTop_toBottomOf="@+id/text_diamond_title" />

    <TextView
        android:id="@+id/text_diamond_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:text="@string/personal_represent_item_diamond"
        android:textColor="@color/common_text_dark_light"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>