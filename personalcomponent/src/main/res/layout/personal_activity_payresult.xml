<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#555555"
    tools:padding="10dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/common_shape_rect_white_coner"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/text_payresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="18dp"
            android:drawableTop="@drawable/personal_ic_pay_success"
            android:textColor="@color/common_text_blank"
            android:textSize="17sp"
            tools:text="@string/personal_account_payresult_success" />

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_enable_gradient_bluewhite_conerfull"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/personal_account_payresult_ok"
            android:textColor="@color/common_white"
            android:textSize="13sp" />

    </LinearLayout>

</FrameLayout>
