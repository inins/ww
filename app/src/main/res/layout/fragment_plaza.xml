<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/common_white"
        app:tabTextAppearance="@style/TabLayoutTextSizeStyleBig"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/common_blue"
        app:tabIndicatorHeight="1dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/common_text_blank"
        app:tabTextColor="@color/common_text_dark_light" />
    <!--考虑使用SmartTabLayout代替TabLayout，TabLayout不好自定义-->

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
