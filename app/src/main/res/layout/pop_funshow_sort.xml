<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:background="@drawable/common_popup_bubble_top_right"
    android:orientation="vertical">

    <CheckedTextView
        android:id="@+id/btn_funchat"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:checked="true"
        android:drawableRight="@drawable/common_select_ic_choose_small"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="趣聊"
        android:textColor="@color/common_text_blank_dark"
        android:textSize="15sp" />

    <View
        style="@style/common_Line_H"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <CheckedTextView
        android:id="@+id/btn_friend"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:drawableRight="@drawable/common_select_ic_choose_small"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="佬友"
        android:textColor="@color/common_text_blank_dark"
        android:textSize="15sp" />

</LinearLayout>