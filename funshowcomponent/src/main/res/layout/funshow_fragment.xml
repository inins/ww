<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:fitsSystemWindows="true">

    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/spring"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:type="follow">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.frame.component.view.barview.BarView
                    android:id="@+id/barview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:max_count="5"
                    app:note="@string/funshow_home_bar_note"
                    app:title="@string/funshow_home_bar_title" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/common_bk_light"
                    android:clipToPadding="false"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp" />

                <TextView
                    android:id="@+id/btn_funshow_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="发布趣晒(仅测试)" />

                <TextView
                    android:id="@+id/btn_funshow_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="登录(仅测试)" />

                <TextView
                    android:id="@+id/btn_funshow_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="趣聊/佬友（仅测试）" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </com.liaoinstan.springview.widget.SpringView>
</FrameLayout>
