<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:background="@drawable/common_popup_bubble_bottom_right"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="@string/funshow_addfunshow_voice_add"
        android:textColor="@color/common_text_blank_dark"
        android:textSize="12sp" />

    <View
        style="@style/common_Line_H"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="@string/funshow_addfunshow_music_add"
        android:textColor="@color/common_text_blank_dark"
        android:textSize="12sp" />

</LinearLayout>