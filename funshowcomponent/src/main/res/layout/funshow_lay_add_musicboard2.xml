<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/common_shape_rect_line_hint_coner">

    <ImageView
        android:id="@+id/btn_musicboard_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/common_select_music_play_big"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_musicboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="5dp"
        android:text="All of Me-John Legend"
        android:textColor="@color/common_text_blank"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/seek_musicboard"
        app:layout_constraintStart_toStartOf="@+id/seek_musicboard" />

    <SeekBar
        android:id="@+id/seek_musicboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_musicboard_play"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_musicboard_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:text="02:22"
        android:textColor="@color/common_text_dark"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/seek_musicboard"
        app:layout_constraintTop_toBottomOf="@+id/seek_musicboard" />

    <TextView
        android:id="@+id/text_musicboard_time_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="04:29"
        android:textColor="@color/common_text_dark"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/seek_musicboard"
        app:layout_constraintTop_toTopOf="@+id/text_musicboard_time" />
</android.support.constraint.ConstraintLayout>