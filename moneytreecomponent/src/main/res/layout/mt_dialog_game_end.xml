<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="307dp"
            android:layout_height="469dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/mt_game_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/mt_game_over"
                android:textColor="@color/common_white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/common_white"
                android:textSize="12sp"
                tools:text="游戏时间：04:30" />

            <TextView
                android:id="@+id/info_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/common_white"
                android:textSize="14sp"
                tools:text="共 42 人参与 累计 3200 钻" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <View
                    android:layout_width="48dp"
                    android:layout_height="1dp"
                    android:textColor="@color/common_white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_white"
                    android:textSize="14sp"
                    android:text="@string/mt_top_5"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    />

                <View
                    android:layout_width="48dp"
                    android:layout_height="1dp"
                    android:textColor="@color/common_white"/>


            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/my_score_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_white"
                android:textSize="13sp"
                tools:text="你排名第2名，获得960钻！"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/shutdown_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mt_ic_shutdown"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"/>


</LinearLayout>