<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="100dp"
    android:layout_height="200dp"
    android:gravity="center_horizontal"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:background="@drawable/common_popup_bubble_top_right">

    <TextView
        android:id="@+id/all_text_view"
        style="@style/mt_StyleTextGameRecordType"
        android:text="@string/mt_all"/>

    <View
        android:layout_width="67dp"
        android:layout_height="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/common_list_divider"/>

    <TextView
        android:id="@+id/lose_text_view"
        style="@style/mt_StyleTextGameRecordType"
        android:text="@string/mt_lose"/>

    <View
        android:layout_width="67dp"
        android:layout_height="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/common_list_divider"/>

    <TextView
        android:id="@+id/win_text_view"
        style="@style/mt_StyleTextGameRecordType"
        android:text="@string/mt_win"/>

    <View
        android:layout_width="67dp"
        android:layout_height="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/common_list_divider"/>

    <TextView
        android:id="@+id/tie_text_view"
        style="@style/mt_StyleTextGameRecordType"
        android:text="@string/mt_tie"/>

</LinearLayout>